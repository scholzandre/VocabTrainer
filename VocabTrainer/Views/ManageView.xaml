<UserControl x:Class="VocabTrainer.Views.ManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VocabTrainer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="infoTextManage"  Foreground="white" FontSize="24" FontWeight="DemiBold" Margin="5,0,0,0">Manage words</TextBlock>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="stackPanel"/>
        </ScrollViewer>
        <TextBox x:Name="searchWord" HorizontalAlignment="Left" Margin="583,0,0,0" TextWrapping="Wrap" Text="Search..." VerticalAlignment="Center" Width="137" Height="21" TextChanged="SearchWord_TextChanged"/>
        <ComboBox x:Name="comboWordlists" Height="24" Margin="388,8,167,9" DropDownClosed="ComboBox_DropDownClosed"/>
    </Grid>
</UserControl>
