<UserControl x:Class="VocabTrainer.Views.LearningModeFourView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:VocabTrainer.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:LearningModeFourViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextElement.FontSize>20</TextElement.FontSize>
        <Button Content="{Binding FirstQuestionText}" x:Name="question1" Grid.Row="0" Height="40" Grid.Column="1" Foreground="Black" Click="QuestionButton"/>
        <Button Content="{Binding SecondQuestionText}" x:Name="question2" Grid.Row="1" Height="40" Grid.Column="1" Foreground="Black" Click="QuestionButton"/>
        <Button Content="{Binding ThirdQuestionText}" x:Name="question3" Grid.Row="2" Height="40" Grid.Column="1" Foreground="Black" Click="QuestionButton"/>
        <Button Content="{Binding FourthQuestionText}" x:Name="question4" Grid.Row="3" Height="40" Grid.Column="1" Foreground="Black" Click="QuestionButton"/>
        <Button Content="{Binding FifthQuestionText}" x:Name="question5" Grid.Row="4" Height="40" Grid.Column="1" Foreground="Black" Click="QuestionButton"/>
        <Button Content="{Binding FirstAnswerText}" x:Name="answer1" Grid.Row="0" Height="40" Grid.Column="3" Click="AnswerButton"/>
        <Button Content="{Binding SecondAnswerText}" x:Name="answer2" Grid.Row="1" Height="40" Grid.Column="3" Click="AnswerButton"/>
        <Button Content="{Binding ThirdAnswerText}" x:Name="answer3" Grid.Row="2" Height="40" Grid.Column="3" Click="AnswerButton"/>
        <Button Content="{Binding FourthAnswerText}" x:Name="answer4" Grid.Row="3" Height="40" Grid.Column="3" Click="AnswerButton"/>
        <Button Content="{Binding FifthAnswerText}" x:Name="answer5" Grid.Row="4" Height="40" Grid.Column="3" Click="AnswerButton"/>
        <TextBlock x:Name="message" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Foreground="White"/>
    </Grid>
</UserControl>
